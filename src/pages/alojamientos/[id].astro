---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { todosLosAlojamientos } from '../../data/alojamientos';
import type { Alojamiento } from '../../data/alojamientos';
import CardAlojamiento from '../../components/cards/CardAlojamiento.astro';

export async function getStaticPaths() {
  return todosLosAlojamientos.map(alojamiento => ({
    params: { id: alojamiento.id },
    props: { alojamiento },
  }));
}

const { alojamiento } = Astro.props as { alojamiento: Alojamiento };
const otrosRefugios = todosLosAlojamientos.filter(a => a.id !== alojamiento.id).slice(0, 3);
---

<Layout title=`${alojamiento.titulo} - Refugios en Chiloé` description={alojamiento.descripcion.substring(0, 160)}>
    <div class="pt-20 bg-gray-50 min-h-screen">
        
        <!-- Navegación -->
        <div class="bg-white border-b border-gray-200">
            <div class="max-w-7xl mx-auto px-6 py-4">
                <a href="/alojamientos#refugios" class="text-green-700 font-semibold hover:underline flex items-center gap-2 w-fit text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
                    </svg>
                    Ver todos los refugios
                </a>
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-6 py-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                
                <!-- Info -->
                <div class="space-y-6">
                    <div>
                        <h1 class="text-4xl font-bold text-gray-900 mb-2">{alojamiento.titulo}</h1>
                        <p class="text-lg text-gray-600">{alojamiento.subtitulo}</p>
                    </div>

                    <p class="text-gray-700 leading-relaxed">{alojamiento.descripcion}</p>

                    <!-- Detalles -->
                    <div class="bg-white rounded-xl p-6 border border-gray-200">
                        <h2 class="text-xl font-bold text-gray-900 mb-5">Comodidades</h2>
                        <div class="space-y-4 text-gray-700">
                            <div class="flex items-center gap-3"><i class="fa-solid fa-users w-5 text-green-600"></i><span class="font-semibold min-w-[120px]">Capacidad:</span><span>{alojamiento.capacidad}</span></div>
                            <div class="flex items-center gap-3"><i class="fa-solid fa-bed w-5 text-green-600"></i><span class="font-semibold min-w-[120px]">Habitaciones:</span><span>{alojamiento.habitaciones}</span></div>
                            <div class="flex items-center gap-3"><i class="fa-solid fa-bath w-5 text-green-600"></i><span class="font-semibold min-w-[120px]">Baños:</span><span>{alojamiento.banos}</span></div>
                            <div class="flex items-center gap-3"><i class="fa-solid fa-utensils w-5 text-green-600"></i><span class="font-semibold min-w-[120px]">Terraza:</span><span>{alojamiento.terraza}</span></div>
                            <div class="flex items-center gap-3"><i class="fa-solid fa-wifi w-5 text-green-600"></i><span class="font-semibold min-w-[120px]">Incluye:</span><span>{alojamiento.incluye}</span></div>
                        </div>
                    </div>

                    <a href="/contacto/" class="block w-full text-center bg-green-600 text-white px-6 py-4 rounded-xl text-lg font-bold hover:bg-green-700 shadow-lg transition-all">
                        Consultar Disponibilidad
                    </a>
                </div>

                <!-- Galería -->
                <div class="space-y-3">
                    <div class="relative rounded-2xl overflow-hidden shadow-lg aspect-[4/3] group cursor-pointer" onclick="openLightbox(0)">
                        <Image src={alojamiento.galeria[0]} alt={alojamiento.titulo} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"/>
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all flex items-center justify-center">
                            <i class="fas fa-search-plus text-white text-3xl opacity-0 group-hover:opacity-100"></i>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-4 gap-3">
                        {alojamiento.galeria.slice(1, 5).map((img, i) => (
                            <div class="relative rounded-lg overflow-hidden aspect-square group cursor-pointer" onclick={`openLightbox(${i + 1})`}>
                                <Image src={img} alt={`Vista ${i + 2}`} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"/>
                                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-all flex items-center justify-center">
                                    <i class="fas fa-search-plus text-white opacity-0 group-hover:opacity-100"></i>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>

        <!-- Lightbox -->
        <div id="lightbox" class="fixed inset-0 bg-black/95 z-50 hidden">
            <button onclick="closeLightbox()" class="absolute top-4 right-4 text-white text-4xl hover:text-gray-300"><i class="fas fa-times"></i></button>
            <button onclick="prevImage()" class="absolute left-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-gray-300 bg-black/50 rounded-full w-12 h-12"><i class="fas fa-chevron-left"></i></button>
            <img id="lightbox-img" src="" alt="" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 max-w-[90%] max-h-[90%] object-contain">
            <button onclick="nextImage()" class="absolute right-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-gray-300 bg-black/50 rounded-full w-12 h-12"><i class="fas fa-chevron-right"></i></button>
            <div class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white bg-black/50 px-4 py-2 rounded-full">
                <span id="current">1</span> / {alojamiento.galeria.length}
            </div>
        </div>

        <!-- Otros refugios -->
        {otrosRefugios.length > 0 && (
            <section class="bg-white py-16 border-t border-gray-200">
                <div class="max-w-7xl mx-auto px-6">
                    <div class="text-center mb-10">
                        <h2 class="text-3xl font-bold text-gray-900 mb-2">Otros refugios que te pueden interesar</h2>
                        <p class="text-gray-600">Más opciones para tu estadía</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        {otrosRefugios.map(r => <CardAlojamiento alojamiento={r} />)}
                    </div>

                    <div class="text-center mt-10">
                        <a href="/alojamientos#refugios" class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-lg font-bold transition-all shadow-md">
                            Ver todos 
                        </a>
                    </div>
                </div>
            </section>
        )}
    </div>

    <script define:vars={{ imgs: alojamiento.galeria.map(img => img.src) }}>
        let idx = 0;
        
        window.openLightbox = (i) => {
            idx = i;
            updateImg();
            document.getElementById('lightbox').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        window.closeLightbox = () => {
            document.getElementById('lightbox').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        window.nextImage = () => { idx = (idx + 1) % imgs.length; updateImg(); }
        window.prevImage = () => { idx = (idx - 1 + imgs.length) % imgs.length; updateImg(); }

        function updateImg() {
            document.getElementById('lightbox-img').src = imgs[idx];
            document.getElementById('current').textContent = idx + 1;
        }

        // Atajos
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeLightbox();
            if (e.key === 'ArrowRight') nextImage();
            if (e.key === 'ArrowLeft') prevImage();
        });

        document.getElementById('lightbox').onclick = (e) => {
            if (e.target.id === 'lightbox') closeLightbox();
        };
    </script>
</Layout>
---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { todasLasGuias } from '../../data/guias';
import type { Guia } from '../../data/guias';
import CardGuia from '../../components/cards/CardGuia.astro';

export async function getStaticPaths() {
  return todasLasGuias.map(guia => ({
    params: { id: guia.id },
    props: { guia },
  }));
}

const { guia } = Astro.props as { guia: Guia };
const otrasGuias = todasLasGuias.filter(g => g.id !== guia.id).slice(0, 3);
---

<Layout title=`${guia.titulo} - Guías de Chiloé` description={guia.descripcion}>
    <div class="pt-20 bg-gray-50 min-h-screen">
        
        <!-- Navegación -->
        <div class="bg-white border-b border-gray-200">
            <div class="max-w-7xl mx-auto px-6 py-4">
                <a href="/guias#guias" class="text-green-700 font-semibold hover:underline flex items-center gap-2 w-fit text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
                    </svg>
                    Ver todas las guías
                </a>
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-6 py-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                
                <!-- Info -->
                <div class="space-y-6">
                    <div>
                        <h1 class="text-4xl font-bold text-gray-900 mb-2">{guia.titulo}</h1>
                        <p class="text-lg text-gray-600">{guia.descripcion}</p>
                    </div>

                    {guia.descripcionLarga && <p class="text-gray-700 leading-relaxed">{guia.descripcionLarga}</p>}

                    <!-- Detalles -->
                    <div class="bg-white rounded-xl p-6 border border-gray-200">
                        <h2 class="text-xl font-bold text-gray-900 mb-5">Información del Sendero</h2>
                        <div class="space-y-4">
                            {guia.dificultad && (
                                <div class="flex items-center gap-3">
                                    <i class="fa-solid fa-mountain w-5 text-green-600"></i>
                                    <span class="font-semibold min-w-[120px]">Dificultad:</span>
                                    <span class:list={["font-bold px-3 py-1 rounded-full text-sm", guia.dificultad === 'Fácil' ? 'bg-green-100 text-green-700' : guia.dificultad === 'Moderada' ? 'bg-yellow-100 text-yellow-700' : 'bg-red-100 text-red-700']}>{guia.dificultad}</span>
                                </div>
                            )}
                            {guia.duracion && (<div class="flex items-center gap-3"><i class="fa-solid fa-clock w-5 text-green-600"></i><span class="font-semibold min-w-[120px]">Duración:</span><span>{guia.duracion}</span></div>)}
                            {guia.distancia && (<div class="flex items-center gap-3"><i class="fa-solid fa-route w-5 text-green-600"></i><span class="font-semibold min-w-[120px]">Distancia:</span><span>{guia.distancia}</span></div>)}
                        </div>
                    </div>

                    <!-- Tips -->
                    <div class="bg-blue-50 rounded-xl p-6 border border-blue-200">
                        <h3 class="text-lg font-bold text-gray-900 mb-3 flex items-center gap-2">
                            <i class="fa-solid fa-lightbulb text-blue-600"></i>Recomendaciones
                        </h3>
                        <ul class="space-y-2 text-sm text-gray-700">
                            <li class="flex gap-2"><i class="fa-solid fa-check text-green-600 mt-1"></i><span>Calzado apropiado para trekking</span></li>
                            <li class="flex gap-2"><i class="fa-solid fa-check text-green-600 mt-1"></i><span>Agua y snacks energéticos</span></li>
                            <li class="flex gap-2"><i class="fa-solid fa-check text-green-600 mt-1"></i><span>Chaqueta impermeable</span></li>
                            <li class="flex gap-2"><i class="fa-solid fa-check text-green-600 mt-1"></i><span>No dejar residuos</span></li>
                        </ul>
                    </div>
                  
                    <a href="/contacto/" class="block w-full text-center bg-green-600 text-white px-6 py-4 rounded-xl text-lg font-bold hover:bg-green-700 shadow-lg transition-all">
                        Consultar Tour Guiado
                    </a>
                </div>

                <!-- Galería -->
                <div class="space-y-3">
                    <div class="relative rounded-2xl overflow-hidden shadow-lg aspect-[4/3] group cursor-pointer" onclick="openLightbox(0)">
                        <Image src={guia.galeria[0]} alt={guia.titulo} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"/>
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all flex items-center justify-center">
                            <i class="fas fa-search-plus text-white text-3xl opacity-0 group-hover:opacity-100"></i>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-4 gap-3">
                        {guia.galeria.slice(1, 5).map((img, i) => (
                            <div class="relative rounded-lg overflow-hidden aspect-square group cursor-pointer" onclick={`openLightbox(${i + 1})`}>
                                <Image src={img} alt={`Vista ${i + 2}`} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"/>
                                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-all flex items-center justify-center">
                                    <i class="fas fa-search-plus text-white opacity-0 group-hover:opacity-100"></i>
                                </div>
                            </div>
                        ))}
                    </div>

                    {guia.galeria.length > 5 && (
                        <button onclick="openLightbox(0)" class="w-full py-3 bg-white border-2 border-green-600 text-green-600 rounded-lg font-semibold hover:bg-green-50">
                            <i class="fas fa-images mr-2"></i>Ver todas ({guia.galeria.length})
                        </button>
                    )}
                </div>
            </div>
        </div>

        <!-- Lightbox -->
        <div id="lightbox" class="fixed inset-0 bg-black/95 z-50 hidden">
            <button onclick="closeLightbox()" class="absolute top-4 right-4 text-white text-4xl hover:text-gray-300"><i class="fas fa-times"></i></button>
            <button onclick="prevImage()" class="absolute left-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-gray-300 bg-black/50 rounded-full w-12 h-12"><i class="fas fa-chevron-left"></i></button>
            <img id="lightbox-img" src="" alt="" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 max-w-[90%] max-h-[90%] object-contain">
            <button onclick="nextImage()" class="absolute right-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-gray-300 bg-black/50 rounded-full w-12 h-12"><i class="fas fa-chevron-right"></i></button>
            <div class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white bg-black/50 px-4 py-2 rounded-full">
                <span id="current">1</span> / {guia.galeria.length}
            </div>
        </div>

        <!-- Otras rutas -->
        {otrasGuias.length > 0 && (
            <section class="bg-white py-16 border-t border-gray-200">
                <div class="max-w-7xl mx-auto px-6">
                    <div class="text-center mb-10">
                        <h2 class="text-3xl font-bold text-gray-900 mb-2">Otras rutas que te pueden interesar</h2>
                        <p class="text-gray-600">Más senderos en Chiloé</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        {otrasGuias.map(g => <CardGuia guia={g} />)}
                    </div>

                    <div class="text-center mt-10">
                        <a href="/guias#guias" class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-lg font-bold transition-all shadow-md">
                            Ver todas 
                        </a>
                    </div>
                </div>
            </section>
        )}
    </div>
 
    <script define:vars={{ imgs: guia.galeria.map(img => img.src) }}>
        let idx = 0;
        
        window.openLightbox = (i) => { idx = i; updateImg(); document.getElementById('lightbox').classList.remove('hidden'); document.body.style.overflow = 'hidden'; }
        window.closeLightbox = () => { document.getElementById('lightbox').classList.add('hidden'); document.body.style.overflow = 'auto'; }
        window.nextImage = () => { idx = (idx + 1) % imgs.length; updateImg(); }
        window.prevImage = () => { idx = (idx - 1 + imgs.length) % imgs.length; updateImg(); }

        function updateImg() {
            document.getElementById('lightbox-img').src = imgs[idx];
            document.getElementById('current').textContent = idx + 1;
        }

        // Atajos
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeLightbox();
            if (e.key === 'ArrowRight') nextImage();
            if (e.key === 'ArrowLeft') prevImage();
        });

        document.getElementById('lightbox').onclick = (e) => {
            if (e.target.id === 'lightbox') closeLightbox();
        };
    </script>
</Layout>